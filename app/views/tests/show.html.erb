<% @a = @quiz.questions.count %>
<% @b = 0 %>

<div class="col-sm-8 col-md-offset-2">

<div id="formario">

<h1><%= @quiz.name %></h1>
  <h5> <%= @test.name %> </h5>
  <h5> <%= @test.email %></h5>
  <h5><%= @test.city %></h5>
</div>



<div class="questions">
<% @quiz.questions.each_with_index do |question, w| %>
  <div id="formario">
    <h4><%= w+1 %>.- <%= question.title %></h4>
    <div class="row">

      <div class="col-sm-4 col-xs-3">
        <h5>Correct Answer:</h5>

<% @d = @quiz.questions[w].try(:correct_option)+1 == @test.test_answers[w].try(:option) %>

<% if @d == true %>
        <div id="magic2" class="uno">
          <h5><%= question.answers[question.correct_option.to_i-1].try(:content) %> S√è</h5>
        </div>
<% else %>
        <div id="magic2" class="dos">
          <h5><%= question.answers[question.correct_option.to_i-1].try(:content) %> NO</h5>
        </div>
<% end %>


      </div>

      <div class="col-sm-4 col-xs-3">
        <h5>Explanation:</h5>
        <div id="magic2">
          <h5><%= question.explanation %></h5>
        </div>
      </div>

      <div class="col-sm-4 col-xs-3">
        <h5>Recomendated reading:</h5>
        <a href="<%= question.link %>">
          <div id="magic2">
            <h5><%= question.reading %></h5>
          </div>    
        </a>
      </div>
    </div>
  </div>
<% end %>


</div>



<div id="formario">

<% @quiz.questions.each_with_index do |a, i| %>
<% @c = @quiz.questions[i].try(:correct_option)+1 == @test.test_answers[i].try(:option) %>
<% if @c == true %>
  <% @b = @b +1 %>
<% end %>
<% end %>

<div class="row">
  <div class="col-sm-6">
    <div id="magic3" class="uno">
      <h5><%= @b %> Correct Answers</h5>
    </div>
  </div>
    <div class="col-sm-6">
    <div id="magic3" class="dos">
      <h5><%= @a - @b %> Wrong Answers</h5>
    </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <div id="magic3" class="tres">
        <h5><%= ((@b / @a.to_f)*100).round(2) %> % of Success</h5>
      </div>
    </div>
  </div>
</div>

</div>

</div>


