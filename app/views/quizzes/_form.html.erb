    <%#= f.label :number_of_questions %><br>
    <%#= f.number_field :number_of_questions %>
  </div> -->

<div id="my_search">
  <div class="field">
  <span> <%= f.check_box :is_zip, {:class => "hidden", :id => "ZipP"}, "Zip Needed", false %>
  <label for="ZipP" class="button button_white">Zip Needed</label></span>
  </div>
</div>
</div>

<div id="questions">
<div class="links">
<%= f.fields_for :questions do |builder| %>
  <%= render 'question_fields', f: builder %>
<% end %>
  <%= link_to_add_association f, :questions, class: "fa_add" do %>
    <span class="fa fa-plus-circle" data-toggle="tooltip" data-placement="right" title="Add Question!"></span>
  <% end %>
</div>
</div>



  <div class="actions">
    <%= f.submit class: "button button_red" %>
    <%= link_to "Cancel", root_path, class: "button button_red" %>
  </div>
  <br>
<% end %>


