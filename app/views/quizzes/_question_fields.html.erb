<div class="nested-fields">
<div id="formario">

<%= link_to_remove_association f, class: "fa_nice" do%>
<span class="fa fa-times" data-toggle="tooltip" data-placement="right" title="Add Question!"></span>
<% end %>

<div id="q1">
<section><%= f.label :Question, class:'info col-form-label'%></section>
</div>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, required: true %>
  </div>

  <div class="field">
    <%= f.label :explanation %><br>
    <%= f.text_area :explanation, required: true %>
  </div>

<div class="row">

  <div class="col-md-6">
   <div class="field">
    <%= f.label :reading %><br>
    <%= f.text_field :reading, required: true %>
    </div>
  </div>


<div class="col-md-6">
   <div class="field">
    <%= f.label :link %><br>
    <%= f.url_field :link, required: true %>
    </div>
  </div>
</div>


<div id="answers">
<div class="links">
  <%= f.fields_for :answers do |builder| %>
  
    <%= render 'answer_fields', f: builder %>
  <% end %>
  <%= link_to_add_association f, :answers, class: "fa_new" do %>
    <h1><span class="fa fa-plus"></span> New Answer</h1>
  <% end %>
</div>
</div>

   <div class="field">
    <%= f.label :correct_answer %><br>
    <%= f.select :correct_option, [["1", 0], ["2", 1], ["3", 2], ["4", 3]]%>
  </div>
</div>
</div>